@model IEnumerable<string>

<h1 class="text-center">Filters</h1>

@foreach (var link in Model)
{
    @Html.RouteLink(link,
        new
        {
            controller = "Product",
            action = "List",
            category = link,
            page = 1
        },
        new
        {
            @class = "btn btn-block btn-default btn-lg"
                + (link == ViewBag.SelectedCategory ? " btn-primary" : "")
        })
}

@Html.ActionLink("Clear", "List", "Product", null, new { @class = "btn btn-block btn-default", @style = (ViewBag.SelectedCategory == null ? "visibility:hidden" : "") })